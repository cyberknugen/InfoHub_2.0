<h3>AfterRenderComponent</h3>

@if(!isLoading)
{
    <ConsentComponent />
}
else
{
   
}

@code {
    private bool isLoading = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);

        if (firstRender)
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}